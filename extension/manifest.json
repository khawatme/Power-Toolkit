{
    "manifest_version": 3,
    "name": "Power-Toolkit for Power Apps",
    "version": "3.0.0",
    "description": "A client-side toolkit for Power Apps and Dynamics365 developers to inspect, debug, and manipulate data.",
    "author": "Mohammed Khawatme",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://*.dynamics.com/*",
        "https://make.powerapps.com/*",
        "https://apps.powerapps.com/*"
    ],
    "action": {
        "default_icon": {
            "48": "icons/icon48.png"
        },
        "default_title": "Launch Power-Toolkit"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "power-toolkit.js"
            ],
            "matches": [
                "https://*.dynamics.com/*",
                "https://make.powerapps.com/*",
                "https://apps.powerapps.com/*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
    }
}